<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="FileInfoOverlay.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <applicationSettings>
        <FileInfoOverlay.Properties.Settings>
          <!--
          App name can take either a full path, if it doesn't find the exe there, it will look for it in the location 
          the FileInfoOverlay is running, if that fails, it will attempt to find the process name in the list of running process.
          -->
            <setting name="AppName" serializeAs="String">
                <value>Apc.exe</value>
            </setting>
          <!--
          this is where the overlay will be positioned relative to the app its overlaying
          -->
            <setting name="DisplayOffSetInPixels" serializeAs="String">
                <value>10, 10</value>
            </setting>
            <setting name="ForeGround" serializeAs="String">
                <value>Black</value>
            </setting>
            <setting name="BackGround" serializeAs="String">
                <value>Transparent</value>
            </setting>
        </FileInfoOverlay.Properties.Settings>
    </applicationSettings>
</configuration>